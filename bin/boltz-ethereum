#!/usr/bin/env node

require('yargs')
  .options({
    'provider': {
      describe: 'HTTP endpoint of the web3 provider',
      default: 'http://127.0.0.1:8545',
      type: 'string',
      alias: 'p',
    },
    'signer': {
      describe: 'address for the JsonRpcSigner',
      default: '0xBF372A3D2AD0439e6E91F8bB9C1E6bdCE9C59E6a',
      type: 'string',
      alias: 's',
    },
  })
  .commandDir('../dist/lib/cli/ethereum/commands/')
  .demandCommand(1, '')
  .strict()
  .argv;
