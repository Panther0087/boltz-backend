#!/usr/bin/env node

require('yargs')
  .options({
    'provider': {
      describe: 'HTTP endpoint of the web3 provider',
      default: 'http://127.0.0.1:8545',
      type: 'string',
      alias: 'p',
    },
    'signer': {
      describe: 'address for the JsonRpcSigner',
      default: '0x7Ca05a95fB37430A093cBc4f729CA9fdd51CE8b5',
      type: 'string',
      alias: 's',
    },
  })
  .commandDir('../dist/lib/cli/ethereum/commands/')
  .demandCommand(1, '')
  .strict()
  .argv;
