#!/usr/bin/env node

const Logger = require('../dist/lib/Logger');
const Database = require('../dist/lib/db/Database');

const { argv } = require('yargs').options({
  dbpath: {
    describe: 'Path to the database file',
    type: 'string',
  },
});

// Migrates to the latest database version
const db = new Database.default(
  new Logger.default('debug'),
  argv.dbpath,
);

db.init();
