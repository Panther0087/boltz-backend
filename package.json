{
  "name": "boltz-backend",
  "version": "3.0.0-beta",
  "description": "Backend of boltz",
  "main": "dist/lib/Boltz.js",
  "scripts": {
    "postinstall": "npm run precompile",
    "proto": "cross-os proto",
    "precompile": "node parseGitCommit.js",
    "compile": "tsc && cross-os postcompile",
    "compile:watch": "tsc -w",
    "start": "node bin/boltzd",
    "dev": "npm run compile && npm run start",
    "lint": "eslint --max-warnings 0 --ext .ts .",
    "docker:regtest": "docker run -d --name regtest -p 10735:10735 -p 9736:9735 -p 18443:18443 -p 19443:19443 -p 18332:18332 -p 18232:18232 -p 29000:29000 -p 29001:29001 -p 29002:29002 -p 30000:30000 -p 30001:30001 -p 30002:30002 -p 40000:40000 -p 40001:40001 -p 40002:40002 -p 50000:50000 -p 50001:50001 -p 50002:50002 -p 10009:10009 -p 10011:10011 -p 11009:11009 -p 11010:11010 -p 8081:8081 boltz/regtest:2.0.0",
    "docker:geth": "docker run -d --name geth -p 8545:8545 -p 8546:8546 boltz/geth:1.9.21",
    "docker:geth:deploy": "mkdir -p contracts && cp -R node_modules/boltz-core/buidler.config.ts node_modules/boltz-core/scripts node_modules/boltz-core/artifacts contracts && cd contracts && buidler deploy --network localhost",
    "docker:geth:fund": "./bin/boltz-ethereum send 1000000000000 && ./bin/boltz-ethereum send 1000000000000 --token",
    "docker:start": "npm run docker:regtest && npm run docker:geth && npm run docker:geth:deploy && npm run docker:geth:fund",
    "docker:stop": "docker kill regtest && docker rm regtest && docker kill geth && docker rm geth",
    "test": "npm run test:unit && npm run docker:start && npm run test:int && npm run docker:stop",
    "test:nodocker": "npm run test:unit && npm run test:int",
    "test:unit": "jest test/unit",
    "test:unit:coverage": "jest test/unit --coverage",
    "test:int": "jest test/integration --runInBand",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "npm run compile",
    "python:install": "pip install -r tools/requirements.txt",
    "python:lint": "pylint tools/*.py docker/*.py"
  },
  "bin": {
    "boltzd": "./bin/boltzd",
    "boltz-cli": "./bin/boltz-cli"
  },
  "cross-os": {
    "postcompile": {
      "linux": "rsync -am --include '*/' --include '*.js*' --exclude '*' lib/proto/ dist/lib/proto"
    },
    "proto": {
      "linux": "./node_modules/grpc-tools/bin/protoc --js_out='import_style=commonjs,binary:lib/proto' --ts_out='lib/proto' --grpc_out='lib/proto' --plugin='protoc-gen-grpc=node_modules/.bin/grpc_tools_node_protoc_plugin' --plugin='protoc-gen-ts=node_modules/grpc_tools_node_protoc_ts/bin/protoc-gen-ts' -I='proto' proto/*.proto"
    }
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltzExchange/boltz-backend"
  },
  "files": [
    "bin",
    "LICENSE",
    "README.md",
    "dist/**/!(tsconfig.tsbuildinfo)"
  ],
  "engines": {
    "node": ">=10.21.0"
  },
  "dependencies": {
    "@boltz/bolt11": "^1.2.7",
    "@google-cloud/storage": "^5.3.0",
    "@iarna/toml": "^2.2.5",
    "async-lock": "^1.2.4",
    "axios": "^0.20.0",
    "bip32": "^2.0.5",
    "bip39": "^3.0.2",
    "bitcoinjs-lib": "^5.2.0",
    "boltz-core": "^0.3.0-beta9",
    "cors": "^2.8.5",
    "cross-os": "^1.3.0",
    "discord.js": "^12.3.1",
    "diskusage": "^1.1.3",
    "ethers": "^5.0.14",
    "express": "^4.17.1",
    "google-protobuf": "^3.13.0",
    "grpc": "1.24.3",
    "node-forge": "^0.10.0",
    "node-schedule": "^1.3.2",
    "otplib": "^12.0.1",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0",
    "winston": "^3.3.3",
    "yargs": "^16.0.3",
    "zeromq": "^5.2.0"
  },
  "devDependencies": {
    "@boltz/bitcoin-ops": "^2.0.0",
    "@nomiclabs/buidler": "^1.4.7",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-etherscan": "^2.1.0",
    "@nomiclabs/buidler-solhint": "^1.3.3",
    "@nomiclabs/buidler-waffle": "^2.1.0",
    "@types/async-lock": "^1.1.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node-forge": "^0.9.5",
    "@types/node-schedule": "^1.3.0",
    "@types/yargs": "^15.0.5",
    "@types/zeromq": "^4.6.3",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "concurrently": "^5.3.0",
    "conventional-changelog": "^3.1.23",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "ethereum-waffle": "^3.1.0",
    "get-port": "^5.1.1",
    "grpc-tools": "^1.9.1",
    "grpc_tools_node_protoc_ts": "^4.1.5",
    "jest": "26.4.2",
    "ts-jest": "26.4.0",
    "ts-node": "9.0.0",
    "ts-protoc-gen": "^0.13.0",
    "typescript": "^4.0.3"
  }
}
